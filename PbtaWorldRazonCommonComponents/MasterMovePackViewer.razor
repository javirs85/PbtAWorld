<div class="MasterMovePack d-flex flex-column mb-3 p-1">
	@if(!HideTittle)
	{
		<div class="MasterMovePackTitle"><DecodedString Value="@MovesPack.Title"/> </div>
	}
	
	@foreach (var m in MovesPack.Moves.OrderBy(x => x.Order))
	{
		<div class="MasterMove @m.HowOften.ToString()" @onclick=@m.Use>
			<DecodedString Value="@m.Tittle" />			
		</div>
	}
</div>

@code {
	[Parameter] public MasterMovePack MovesPack { get; set; } = new();
	[Parameter] public bool HideTittle { get; set; } = false;
}