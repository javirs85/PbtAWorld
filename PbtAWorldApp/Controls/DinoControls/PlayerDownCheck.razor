
<div class="d-flex" @onclick=Toggle>
	@if (Player.IsDown)
	{
		<div style="width: 20px; height: 20px; border-radius: 2px; background: red;"></div>
	}
	else
	{
		<div style="width: 20px; height: 20px; border-radius: 2px; background: red;"></div>
	}
	<span>Fuera de combate</span>
</div>



@code {
	[Parameter] public DinoPlayer Player { get; set; } = new();

	private void Toggle()
	{
		Player.IsDown = !Player.IsDown;
	}

}
